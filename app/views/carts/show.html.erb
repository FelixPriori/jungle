<section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>
  <% if enhanced_cart.length > 0 %>
    <%= render 'panel' %>
    <div class="row">
      <div class="col-xs-12">
        <%= form_tag orders_path do %>
          <script
            src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-amount="<%= cart_subtotal_cents %>"
            data-name="Jungle"
            data-description="Khurram Virani's Jungle Order"
            data-locale="auto"
            data-email="kvirani@gmail.com"
            data-currency="cad">
          </script>
        <% end %>
      </div>
    </div>
  <%else%>
    <div class="alert alert-danger">Add items to your cart to view its contents</div>
    <%= link_to 'home', products_path, class: "btn btn-primary" %>
  <%end%>

</section>
